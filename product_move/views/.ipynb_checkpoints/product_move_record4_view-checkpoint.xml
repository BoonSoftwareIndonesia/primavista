<odoo>
  <data>
      <record id="action_product_move_record4" model="ir.actions.act_window">
            <field name="name">Record</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product_move.record4</field>
            <field name="view_mode">tree,pivot</field>
        </record>
      
      <menuitem id="menu_product_move_record4"
            name="Record4"
            parent="product_move_root"
            action="action_product_move_record4"
            sequence="5"/>
      
      <record id="tree_product_move_record4" model="ir.ui.view">
            <field name="name">product_move.record4.tree</field>
            <field name="model">product_move.record4</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="start_date" modifiers="{'readonly':true}"/>
                    <field name="product" modifiers="{'readonly':true}"/>
                    <field name="start_quantity" modifiers="{'readonly':true}"/>
                    <field name="start_value" modifiers="{'readonly':true}"/>
                    <field name="PODR_In" modifiers="{'readonly':true}"/>
                    <field name="PODR_Out" modifiers="{'readonly':true}"/>
                    <field name="GR_In" modifiers="{'readonly':true}"/>
                    <field name="GR_Out" modifiers="{'readonly':true}"/>
                    <field name="undefined_In" modifiers="{'readonly':true}"/>
                    <field name="undefined_Out" modifiers="{'readonly':true}"/>
                    <field name="CP_In" modifiers="{'readonly':true}"/>
                    <field name="CP_Out" modifiers="{'readonly':true}"/>
                    <field name="OR_In" modifiers="{'readonly':true}"/>
                    <field name="OR_Out" modifiers="{'readonly':true}"/>
                    <field name="GRN_In" modifiers="{'readonly':true}"/>
                    <field name="GRN_Out" modifiers="{'readonly':true}"/>
                    <field name="POR_In" modifiers="{'readonly':true}"/>
                    <field name="POR_Out" modifiers="{'readonly':true}"/>
                    <field name="GRA_In" modifiers="{'readonly':true}"/>
                    <field name="GRA_Out" modifiers="{'readonly':true}"/>
                    <field name="total_in" modifiers="{'readonly':true}"/>
                    <field name="total_out" modifiers="{'readonly':true}"/>
                    <field name="quantity_movement" modifiers="{'readonly':true}"/>
                    <field name="final_quantity" modifiers="{'readonly':true}"/>
                    <field name="final_value" modifiers="{'readonly':true}"/>
                    <field name="value_in" modifiers="{'readonly':true}"/>
                    <field name="value_out" modifiers="{'readonly':true}"/>
                    <field name="value_total" modifiers="{'readonly':true}"/>
                </tree>
            </field>
        </record>
      
      <record id="pivot_product_move_record4" model="ir.ui.view">
            <field name="name">product_move.record4.pivot</field>
            <field name="model">product_move.record4</field>
            <field name="arch" type="xml">
                <pivot string="Pivot">
                    <field name="start_date"/>
                    <field name="product"/>
                    <field name="start_quantity"/>
                    <field name="start_value"/>
                    <field name="PODR_In"/>
                    <field name="PODR_Out"/>
                    <field name="GR_In"/>
                    <field name="GR_Out"/>
                    <field name="undefined_In"/>
                    <field name="undefined_Out"/>
                    <field name="CP_In"/>
                    <field name="CP_Out"/>
                    <field name="OR_In"/>
                    <field name="OR_Out"/>
                    <field name="GRN_In"/>
                    <field name="GRN_Out"/>
                    <field name="POR_In"/>
                    <field name="POR_Out"/>
                    <field name="GRA_In"/>
                    <field name="GRA_Out"/>
                    <field name="total_in"/>
                    <field name="total_out"/>
                    <field name="quantity_movement"/>
                    <field name="final_quantity"/>
                    <field name="final_value"/>
                    <field name="value_in"/>
                    <field name="value_out"/>
                    <field name="value_total"/>
                </pivot>
            </field>
        </record>
      
      <record id="search_product_move_record4" model="ir.ui.view">
            <field name="name">product_move.record4.search</field>
            <field name="model">product_move.record4</field>
            <field name="arch" type="xml">
                <search string="Product Move">
<!--                     <field name="name"/>
                    <filter
                        name="state_draft"
                        domain="[('active','=','false')]"
                        string="Draft"
                    />
                    <filter
                        name="state_active"
                        domain="[('active','=','true')]"
                        string="Active"
                    /> -->
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter
                            name="group_by_product"
                            string="Product"
                            domain="[]"
                            context="{'group_by':'product'}"
                        />
                        <filter
                            name="group_by_start_date"
                            string="Start Date"
                            domain="[]"
                            context="{'group_by':'start_date'}"
                        />
                    </group>
                </search>
            </field>
        </record>
  </data>
</odoo>