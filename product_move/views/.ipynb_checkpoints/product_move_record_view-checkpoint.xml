<odoo>
  <data>
      <record id="action_product_move_record" model="ir.actions.act_window">
            <field name="name">Record</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product_move.record</field>
            <field name="view_mode">tree,pivot</field>
        </record>
      
      <menuitem id="menu_product_move_record"
            name="Record"
            parent="product_move_root"
            action="action_product_move_record"
            sequence="2"/>
      
      <record id="tree_product_move_record" model="ir.ui.view">
            <field name="name">product_move.record.tree</field>
            <field name="model">product_move.record</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="start_date" modifiers="{'readonly':true}"/>
                    <field name="product" modifiers="{'readonly':true}"/>
                    <field name="io_code" modifiers="{'readonly':true}"/>
                    <field name="trans_code" modifiers="{'readonly':true}"/>
                    <field name="start_quantity" modifiers="{'readonly':true}"/>
                    <field name="quantity" modifiers="{'readonly':true}"/>
                </tree>
            </field>
        </record>
      
      <record id="pivot_product_move_record" model="ir.ui.view">
            <field name="name">product_move.record.pivot</field>
            <field name="model">product_move.record</field>
            <field name="arch" type="xml">
                <pivot string="Pivot">
                    <field name="start_date" />
                    <field name="product" />
                    <field name="io_code" />
                    <field name="trans_code" />
                    <field name="start_quantity" />
                    <field name="quantity" />
                </pivot>
            </field>
        </record>
      
      <record id="search_product_move_record" model="ir.ui.view">
            <field name="name">product_move.record.search</field>
            <field name="model">product_move.record</field>
            <field name="arch" type="xml">
                <search string="Product Move">
<!--                     <field name="name"/>
                    <filter
                        name="state_draft"
                        domain="[('active','=','false')]"
                        string="Draft"
                    />
                    <filter
                        name="state_active"
                        domain="[('active','=','true')]"
                        string="Active"
                    /> -->
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter
                            name="group_by_product"
                            string="Product"
                            domain="[]"
                            context="{'group_by':'product'}"
                        />
                        <filter
                            name="group_by_start_date"
                            string="Start Date"
                            domain="[]"
                            context="{'group_by':'start_date'}"
                        />
                    </group>
                </search>
            </field>
        </record>
  </data>
</odoo>